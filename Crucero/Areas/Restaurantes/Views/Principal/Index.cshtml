@model IEnumerable<BDContext.menu>

@{
    ViewBag.Title = "Menú";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home", new { area = "" })"><i class="fa fa-home"></i> Inicio</a></li>
        <li class="active"> - Principal</li>
    </ol>
</section>


<section class="content">
    <a href="@Url.Action("Create_Menu")" class="btn btn-primary" style="margin-top: 0.5em; margin-bottom: 1em;"><i class="fa fa-plus"></i> Crear</a>

    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="listado">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.plato)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.jornada1.nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.fecha)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.tipo)
                        </th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @(String.Join(",", item.plato.Select(x => x.nombre)))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.jornada1.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fecha)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.tipo)
                            </td>*@
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-xs btn-warning"><i class="fa fa-edit"></i> Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

@section scripts{
    <script src="~/Scripts/datatables.min.js" type="text/javascript"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#listado').dataTable({
                "order": [],
                "columnDefs": [{
                    "targets": 'no-sort',
                    "orderable": false,
                }],
                "language": {
                    "url": "../../Scripts/SpanishDatables.json"
                }
            });
        });
    </script>
}